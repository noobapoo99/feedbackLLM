generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  role      Role     @default(ANALYST)
  createdAt DateTime @default(now())

  assignments Assignment[]
  reviews     Review[]
}

enum Role {
  ADMIN
  ANALYST
}

model Product {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  category  String
  createdAt DateTime @default(now())

  assignments Assignment[]
  reviews     Review[]
}

model Assignment {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  userId    String @db.ObjectId
  productId String @db.ObjectId

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  rating    Int
  createdAt DateTime @default(now())

  reviewerName   String? // NEW — store CSV reviewer name
  sentiment      String? // NEW — positive / neutral / negative
  sentimentScore Float? // NEW — numeric score

  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])

  userId String? @db.ObjectId
  user   User?   @relation(fields: [userId], references: [id])
}

model ChatMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  message   String
  sender    String // "user" or "system"
  createdAt DateTime @default(now())
}
